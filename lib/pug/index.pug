h3 Total performance score #{(gpsiSummary.lighthouseResult.categories.performance.score || 0) * 100}

.responsive
  table
    thead
      tr
        th Rule name
        th Summary
        th Score
        th Recommendation
    tbody
    each audit in gpsiSummary.lighthouseResults.audits
      tr
        td(data-title='Name') #{audit.title}
        if audit.description
          td.url(data-title='Summary') #{audit.description}
        else
          td.url(data-title='Summary') No summary.
        if audit.score
          td(data-title='Score')  #{audit.score * 100}
        else
          td(data-title='Score')  'n/a'
        td(data-title='Recommendation')  #{audit.displayValue}
